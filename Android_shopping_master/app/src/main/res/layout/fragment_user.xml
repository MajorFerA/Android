<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:orientation="vertical"
    tools:context="fragment.UserFragment">


    <LinearLayout
        android:id="@+id/logins"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/user_color_bg"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="20dp"
            android:text="个人中心"
            android:textColor="@color/white"
            android:textSize="20dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:orientation="vertical"
            android:visibility="gone">

        </LinearLayout>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:background="@drawable/user_color_bg"
        android:gravity="center">

        <Button
            android:id="@+id/login"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginBottom="10dp"
            android:background="@drawable/user_bg_center"
            android:gravity="center"
            android:orientation="vertical"
            android:text="点击登录"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="20dp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/login_show"
        android:layout_width="match_parent"
        android:layout_height="279dp"
        android:layout_marginTop="30dp"
        android:orientation="vertical"
        android:visibility="visible">

        <LinearLayout
            android:id="@+id/updatepassword"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:paddingLeft="20dp">

            <ImageView
                android:layout_width="25dp"
                android:layout_height="50dp"
                android:src="@drawable/user_ico" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:paddingLeft="15dp"
                android:text="修改密码"
                android:textSize="20dp" />

            <ImageView
                android:layout_width="25dp"
                android:layout_height="50dp"
                android:layout_marginLeft="170dp"
                android:src="@drawable/user_ico_back" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/updateuserinfo"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="5dp"
            android:paddingLeft="20dp">

            <ImageView
                android:layout_width="25dp"
                android:layout_height="50dp"
                android:src="@drawable/user_ico_update" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:paddingLeft="15dp"
                android:text="个人信息"
                android:textSize="20dp">

            </TextView>

            <ImageView
                android:layout_width="25dp"
                android:layout_height="50dp"
                android:layout_marginLeft="170dp"
                android:src="@drawable/user_ico_back" />
        </LinearLayout>

        <LinearLayout
            android:id="@id/info"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="5dp"
            android:paddingLeft="20dp">

            <ImageView
                android:layout_width="25dp"
                android:layout_height="50dp"
                android:src="@drawable/user_ico_info1" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:paddingLeft="15dp"
                android:text="查看订单"
                android:textSize="20dp">

            </TextView>

            <ImageView
                android:layout_width="25dp"
                android:layout_height="50dp"
                android:layout_marginLeft="170dp"
                android:src="@drawable/user_ico_back" />
        </LinearLayout>


        <LinearLayout
            android:id="@+id/yj"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginTop="20dp"
            android:paddingLeft="20dp">

            <ImageView
                android:layout_width="25dp"
                android:layout_height="50dp"
                android:src="@drawable/user_ico_yj" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:paddingLeft="15dp"
                android:text="意见反馈"
                android:textSize="20dp">

            </TextView>

            <ImageView
                android:layout_width="25dp"
                android:layout_height="50dp"
                android:layout_marginLeft="170dp"
                android:src="@drawable/user_ico_back" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="5dp"
            android:paddingLeft="20dp"/>

    </LinearLayout>

    <Button
        android:id="@+id/unlogin"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_marginBottom="10dp"
        android:background="@drawable/user_bg_center"
        android:gravity="center"
        android:orientation="vertical"
        android:text="还未登录"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="20dp"
        android:visibility="gone"/>

</LinearLayout>